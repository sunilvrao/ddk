%h1 Listing stores

%table.table.table-bordered.table-striped
  %tr
    %th Name
    %th Description
    %th Logo
    %th Cc auth
    %th User
    %th
    %th
    %th

  - @stores.each do |store|
    %tr
      %td= store.name
      %td= store.description
      %td= store.logo
      %td= store.cc_auth_id
      %td= store.user.name
      %td= link_to 'View', user_store_path(store.user,store)
      %td= link_to 'Edit', edit_user_store_path(store.user.id,store.id)
      %td= link_to 'Destroy', [store.user, store], method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Store', new_user_store_path
